<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/Css/round1.css" />
    <link rel="stylesheet" href="/Css/joinedsession.css" />
  </head>
  <body>
    <!-- Include Header -->
    <%- include('partials/header') %>

    <div class="joined-session-container">
      <!-- Participants List Section -->
      <div class="participants-list">
        <h3>Participants (<%= session.participants.length %>)</h3>

        <!-- Show host first -->
        <div class="participant host">
          <img
            src="<%= session.hostId.profilePicture || '/images/default-avatar.png' %>"
            alt="Host"
            class="participant-avatar"
          />
          <div class="participant-info">
            <span class="username"><%= session.hostId.username %></span>
            <span class="badge host-badge">Host</span>
          </div>
        </div>

        <!-- Show other participants -->
        <% session.participants.forEach(participant => { %> <% if
        (!participant._id.equals(session.hostId._id)) { %>
        <div class="participant">
          <img
            src="<%= participant.profilePicture || '/images/default-avatar.png' %>"
            alt="Participant"
            class="participant-avatar"
          />
          <div class="participant-info">
            <span class="username"><%= participant.username %></span>
          </div>
        </div>
        <% } %> <% }); %>
      </div>

      <div class="joined-header-section">
        <div class="joined-timer">1:30</div>
        <div class="joined-session-name">Session Name</div>
        <div class="joined-theme">Theme</div>
      </div>

      <div class="joined-content-grid">
        <div class="joined-chat-section">
          <h3 class="joined-chat-title">Chat</h3>
          <div class="joined-chat-box">
            <p class="joined-placeholder-text">Start writing your ideas</p>
          </div>
          <div class="joined-wait-message">WAIT FOR THE HOST TO START</div>
        </div>

        <div class="joined-brainstorming-section">
          <h3 class="joined-brainstorming-title">Brainstorming Ideas</h3>
          <div class="joined-ideas-box">
            <!-- Ideas will appear here -->
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
