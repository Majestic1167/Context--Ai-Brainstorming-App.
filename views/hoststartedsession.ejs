<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/Css/round1.css" />
    <link rel="stylesheet" href="/Css/joinedsession.css" />
    <script src="/socket.io/socket.io.js"></script>
    <!-- Link to external JavaScript file -->
    <script src="/js/session.js" defer></script>
  </head>
  <body>
    <%- include('partials/header') %>

    <div class="session-container" data-session-id="<%= session._id %>">
      <!-- Participants List Section -->
      <div class="participants-list" id="participants-list">
        <h3>Participants (<span id="participant-count">0</span>)</h3>
        <!-- Initial host participant -->
        <div class="participant host">
          <img
            src="<%= user.profilePicture || '/images/default-avatar.png' %>"
            alt="Host"
            class="participant-avatar"
          />
          <div class="participant-info">
            <span class="username"><%= user.username %></span>
            <span class="badge host-badge">Host</span>
          </div>
        </div>
      </div>

      <div class="header-section">
        <div class="timer" id="session-timer">1:30</div>
        <div class="session-name"><%= session.sessionName %></div>
        <div class="theme"><%= session.theme %></div>

        <!-- Settings Button -->
        <button class="settings-button" id="settings-btn">⚙️</button>

        <!-- Dropdown Menu for Settings -->
        <div id="settings-menu" class="settings-menu" style="display: none">
          <ul>
            <li><button id="manage-user">Manage User</button></li>
            <li><button id="terminate-session">Terminate Session</button></li>
            <li><button id="restart-session">Restart Session</button></li>
          </ul>
        </div>
      </div>

      <div class="chat-section">
        <h3>Chat</h3>
        <div class="chat-box" id="chat-messages">
          <!-- Messages will appear here -->
        </div>
        <div id="typing-indicator" style="display: none"></div>
        <form id="chat-form" class="input-section">
          <input
            type="text"
            id="chat-input"
            placeholder="Write here"
            class="chat-input"
            autocomplete="off"
          />
          <button type="submit" class="send-btn">Send</button>
        </form>
      </div>

      <div class="brainstorming-section">
        <h3>Brainstorming Ideas</h3>
        <div class="ideas-box" id="ideas-container">
          <!-- Ideas will appear here -->
        </div>
        <form id="idea-form" class="idea-form">
          <input
            type="text"
            id="idea-input"
            placeholder="Share your idea..."
            autocomplete="off"
          />
          <button type="submit" class="send-btn">Submit</button>
        </form>
      </div>
    </div>
  </body>
</html>
